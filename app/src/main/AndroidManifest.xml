<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.game">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Game">
        <activity
            android:name="com.example.community.ui.post.PostDetailActivity"
            android:exported="true" />
        <activity
            android:name="com.example.community.ui.post.PostPublishActivity"
            android:exported="true" />
        <activity
            android:name="com.example.online.CompetitionSetActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.online.JoinActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.online.NewRoomActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.online.OnlineSelectionActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.entrance.SkinChosenActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.community.CommunityActivity"
            android:exported="true"
            android:label="@string/title_activity_community" />
        <activity
            android:name="com.example.entrance.ModelSelectionActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.user.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.user.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.entrance.EntranceActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.entrance.LevelSelectionActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
    </application>

</manifest>